{
  "manifest_version": 2,
  "name": "Stories We Love",
  "author": "FoxInFlame",
  "description": "A Material Design inspired WattPad client.",
  "version": "0.5",
  "icons": {
    "128": "128.png"
  },
  "offline_enabled": true,
  "app": {
    "background": {
      "scripts": [
        "libraries/jQuery/jquery-2.2.3.min.js",
        "background.js"
      ]
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    "alwaysOnTopWindows",
    "<all_urls>"
  ]
}